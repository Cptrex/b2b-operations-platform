# =========================
# ASP.NET Core
# =========================
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://+:8080

ServiceName=service.business
ServiceSecret=YOUR_BUSINESS_SECRET_HERE

# =========================
# Auth.Service (service-to-service)
# =========================
ServiceJwt__Issuer=auth.service
ServiceJwt__PublicKeyPath=auth_service_public.pem
ServiceJwt__ExpiresMinutes=5
AuthService__Scheme=http
AuthService__Host=auth-service
AuthService__Port=8080

# =========================
# Auth.Business (client-to-service)
# =========================
ClientJwt__Issuer=auth.business
ClientJwt__Audience=platform
ClientJwt__PublicKeyPath=auth_business_public.pem
ClientJwt__ExpiresMinutes=60

# =========================
# PostgreSQL
# =========================
ConnectionStrings__Postgres=Host=postgres;Port=5432;Database=platform_db;Username=service_user;Password=service_password

# =========================
# MongoDB
# =========================
Mongo__ConnectionString=mongodb://mongo:27017
Mongo__Database=platform_db

# =========================
# Redis
# =========================
Redis__Host=redis
Redis__Port=6379
Redis__Password=

# =========================
# RabbitMQ
# =========================
RabbitMQ__Host=rabbitmq
RabbitMQ__Port=5672
RabbitMQ__Username=svc_business
RabbitMQ__Password=YOUR_RABBITMQ_PASSWORD_HERE
RabbitMQ__VirtualHost=/platform
