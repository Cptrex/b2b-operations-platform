{
  "ASPNETCORE": {
    "ENVIRONMENT": "Production",
    "URLS": "http://+:8080"
  },
  "ServiceName": "service.business",
  "ServiceSecret": "BUSINESS_SECRET",
  "ServiceJwt": {
    "Issuer": "auth.service",
    "AuthServicePublicKeyPath": "auth_service_public.pem",
    "ExpiresMinutes": 5
  },

  "ClientJwt": {
    "Issuer": "auth.business",
    "Audience": "platform",
    "Secret": "CHANGE_ME_CLIENT_SECRET_64_CHARS_MIN",
    "ExpiresMinutes": 60
  },

  "ConnectionStrings": {
    "Postgres": "Host=postgres;Port=5432;Database=platform_db;Username=service_user;Password=service_password"
  },
  "AuthService": {
    "Scheme": "http",
    "Host": "localhost",
    "Port": 5257
  },
  "Mongo": {
    "ConnectionString": "mongodb://mongo:27017",
    "Database": "platform_db"
  },

  "Redis": {
    "Host": "redis",
    "Port": 6379,
    "Password": ""
  },

  "RabbitMQ": {
    "Host": "rabbitmq",
    "Port": 5672,
    "Username": "svc_business",
    "Password": "STRONG_PASSWORD",
    "VirtualHost": "/platform"
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning"
    }
  }
}
